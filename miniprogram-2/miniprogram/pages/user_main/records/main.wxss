.header {
  display: flex; /* 使用 Flexbox 布局 */
  align-items: center; /* 垂直居中 */
  padding: 10px;
}

.profile-title {
  flex-grow: 1; /* 让 profile-title 占据剩余空间 */
  text-align: center; /* 使文字水平居中 */
  font-size: 20px; /* 设置字体大小 */
  color:rgb(35, 190, 233);
}
.profile-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
  padding-left: 8px; /* 左侧内边距 2px */
  padding-right: 8px; /* 右侧内边距 2px */
}

.profile-label {
  font-size: 20px;
  color: #333;
  font-weight: bold; /* 使文字加粗 */
}

.profile-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-left: 10px;
}

.profile{
  font-size: 16px;
  color: #666;
}
.background{
  background-color: #ebddb6; /* 米黄色背景 */
  padding: 10px; /* 添加一些内边距 */
  min-height: 100vh; /* 设置最小高度为视口高度，确保内容区域覆盖底部 */
}

.container {
  padding: 20rpx;
}

.tabs {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.tab {
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  color: #666;
}

.tab.active {
  color: #07c160;
  border-bottom: 4rpx solid #07c160;
}

.records-list {
  margin-top: 20rpx;
}

.clear-btn {
  text-align: right;
  padding: 10rpx;
  color: #999;
  font-size: 24rpx;
}

.record-item {
  margin: 20rpx 0;
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.record-content {
  margin-bottom: 10rpx;
}

.user-message, .ai-message {
  padding: 10rpx;
  margin: 5rpx 0;
}

.user-message {
  color: #07c160;
}

.ai-message {
  color: #666;
}

.score-content {
  font-size: 28rpx;
}

.score-content .text {
  color: #333;
  margin-bottom: 10rpx;
}

.score-content .score {
  color: #07c160;
  font-size: 32rpx;
  margin: 10rpx 0;
}

.score-content .details {
  display: flex;
  justify-content: space-between;
  color: #666;
  font-size: 24rpx;
}

.record-time {
  font-size: 24rpx;
  color: #999;
  margin: 10rpx 0;
}

.delete-btn {
  text-align: right;
  color: #ff4444;
  font-size: 24rpx;
}