/* pages/main/main.wxss */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}
.chat-history {
  flex: 1;
  padding: 10px;
  overflow-y: scroll;  /* 允许聊天记录滚动 */
  margin-top: 60px; /* 留出空间给固定的语言选择按钮 */
  margin-bottom: 150px; /* 留出空间给固定的语言选择按钮 */
}
.chat-message {
  display: flex;
  padding: 10px;
  margin: 10px 0;
  border-radius: 15px;
  align-items: center; /* 垂直居中对齐 */
  padding: 5px 10px; /* 适当的内边距 */
  white-space: pre-wrap; /* 允许文本换行 */
  word-wrap: break-word; /* 自动换行 */
  word-break: break-word; /* 长单词自动换行 */
  max-width: 70%; /* 设置消息泡泡最大宽度为屏幕的 80% */
  margin-left: 10%; /* 距离容器左边 80% 位置 */
  margin-bottom: 10px;
}

/* 用户消息气泡（我）右对齐 */
.chat-message.user {
  background-color: #b3e5fc;
  text-align: right;
}
/* AI消息气泡（AI）左对齐 */

.chat-message.ai {
  background-color: #b3fcd1;
}
.avatar {
  width: 50px;                /* 头像宽度 */
  height: 50px;               /* 头像高度 */
  border-radius: 50%;         /* 圆形头像 */
  margin: 0 10px;             /* 头像与消息的间距 */
}
.avatar.user {
  margin-left: 80%;
  background-color: #ffc097;
}
.avatar.ai {
  background-color: #ffb4c1;
  text-align: left;
}

.input-container {
  display: flex;
  align-items: center;
  flex-direction: column; /* 设置为垂直布局 */
  align-items: stretch;   /* 按钮宽度与输入框一致 */
  padding: 10px;
  background-color: #fff;
  border-top: 1px solid #e1e1e1;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #ffffff;
  z-index: 1000;  /* 确保输入框区域在最上层 */
  border-top: 1px solid #ccc;
}

/* 输入框 */
.chat-input {
  flex: 1;
  height: 40px;
  padding: 0 10px;
  margin-right: 10px;
  margin-bottom: 10px;  /* 给输入框与按钮之间留空 */
  border-radius: 20px;
  border: 1px solid #ddd;
  border: 2px solid rgb(216, 151, 151);
  font-size: 14px;
  width:90%;
  background-color: #fafafa;
}

/* 按钮容器 */
.button-container {
  display: flex;
  flex-direction: row; /* 按钮水平排列 */
  justify-content: space-between;  /* 让按钮左右对齐 */
  padding: 0 10px;  /* 给按钮容器左右添加 20px 间距 */
  gap: 80px;    
  width:90%; 
}

/* 按钮样式 */
.send-button, .record-button {
  flex: 1;  /* 让按钮占据相等宽度 */
  padding: 2px;
  background-color: #ff557f;
  color: white;
  border: none;
  border-radius: 20px;
  cursor: pointer;
  margin-left: 5px;
  margin-right: 5px;
}

/* 发送按钮的hover效果 */
.send-button:hover {
  background-color: #1565c0;
}

/* 发送按钮禁用状态 */
.send-button:disabled {
  background-color: #b0bec5;
  cursor: not-allowed;
}

/* 语种选择按钮 */
.language-select-button {
  position: fixed;
  left: 50%; /* 居中 */
  transform: translateX(-50%); /* 精确居中 */
  padding: 10px;
  color: rgb(139, 189, 255);
  background-color: #f5f5f5;
  border-radius: 0; /* 取消圆角，让按钮横向全屏 */
  border-radius: 5px;
  font-size: 20px;
  text-align: center;
}
.buttom-footer {
  position: relative;
}

/* 场景选择按钮样式 */
.select-container {
  display: flex;            /* 横向排列按钮 */
  padding: 0px 10px; 
  justify-content: space-between; /* 确保按钮水平均匀分布 */
  position: fixed;          /* 固定位置 */
  gap: 10px;                           /* 设置按钮之间的间距为 10px */
  bottom: 103px;             /* 固定在输入框上方 20px */
  width: 95%;
  background-color: #ffffff;
}

/* 场景选择按钮 */
.select-button {
  padding: 5px 0px;                  /* 按钮的内边距 */
  color: #ffffff;
  border: 2px solid black;              /* 添加黑色2px边框 */
  border-radius: 25px;                  /* 圆角 */
  font-size: 16px;
  text-align: center;
  background-color: #949494;
  cursor: pointer;
  margin: 0 10px;                        /* 按钮之间的间距，左右 5px（使得按钮之间总共间距为 10px） */
}
/*跳转头像*/
.avatar2 {
  display: absolute;
  position: fixed;
  left:5%;
  top:-2%;
  background-color: #ffc097;
  border-radius: 50%;         /* 圆形头像 */
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin: 20px 0;
  z-index: 9999; /* 设置一个较大的值来确保它位于最顶层 */
}