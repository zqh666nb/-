/* 设置整体容器 */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* 聊天记录区域 */
.chat-history {
  flex: 1;
  padding: 10px;
  overflow-y: scroll;  /* 允许聊天记录滚动 */
  padding-bottom: 120px; /* 留出空间给发送按钮 */
  margin-top: 60px; /* 留出空间给固定的语言选择按钮 */
}

/* 聊天消息气泡 */
.chat-message {
  display: flex;
  padding: 10px;
  margin: 10px 0;
  border-radius: 15px;
  align-items: center; /* 垂直居中对齐 */
  padding: 5px 10px; /* 适当的内边距 */
  white-space: pre-wrap; /* 允许文本换行 */
  word-wrap: break-word; /* 自动换行 */
  word-break: break-word; /* 长单词自动换行 */
  max-width: 70%; /* 设置消息泡泡最大宽度为屏幕的 80% */
  margin-left: 10%; /* 距离容器左边 80% 位置 */
}

/* 用户消息气泡（我）右对齐 */
.chat-message.user {
  background-color: #b3e5fc;
}
/* AI消息气泡（AI）左对齐 */
.chat-message.ai {
  background-color: #b3fcd1;
}
.avatar {
  width: 50px;                /* 头像宽度 */
  height: 50px;               /* 头像高度 */
  border-radius: 50%;         /* 圆形头像 */
  margin: 0 10px;             /* 头像与消息的间距 */
}
.avatar.user {
  margin-left: 80%;
  background-color: #ffc097;
}
.avatar.ai {
  background-color: #ffb4c1;
}

/* 每个消息的文本 */
.chat-message text {
  font-size: 14px;
  color: #333;
  white-space: pre-wrap;  /* 保持文本中的换行符和空格 */
  word-wrap: break-word;  /* 长单词换行 */
}
/* 输入框区域 */
.input-container {
  display: flex;
  align-items: center;
  padding: 10px;
  background-color: #fff;
  border-top: 1px solid #e1e1e1;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #ffffff;
  z-index: 1000;  /* 确保输入框区域在最上层 */
}

/* 输入框 */
.chat-input {
  flex: 1;
  height: 40px;
  padding: 0 10px;
  margin-right: 10px;
  border-radius: 20px;
  border: 1px solid #ddd;
  font-size: 14px;
  background-color: #fafafa;
}

