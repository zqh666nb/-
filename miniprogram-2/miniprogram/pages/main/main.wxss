/* pages/main/main.wxss */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.chat-history {
  flex: 1;
  padding: 10px;
  overflow-y: auto;
}

.chat-message {
  margin-bottom: 10px;
}

.chat-message.user {
  text-align: right;
}

.chat-message.ai {
  text-align: left;
}

.input-container {
  display: flex;
  padding: 10px;
  border-top: 1px solid #ccc;
}

.chat-input {
  flex: 1;
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.send-button, .record-button {
  margin-left: 10px;
  padding: 5px 10px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
}