.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #d0f0c0;
}

.header {
  text-align: center;
  margin-bottom: 20px;
}

.title {
  font-size: 28px;
  font-weight: bold;
  font-family: 'Times New Roman', Times, serif;
  display: block;
}

.subtitle {
  font-size: 20px;
  font-family: 'Times New Roman', Times, serif;
  margin-top: 5px;
  display: block;
}

.avatar {
  width: 150px;
  height: 150px;
  border-radius: 50%;
  margin: 20px 0;
}

.login-button {
  width: 80%;
  padding: 10px;
  margin: 10px 0;
  border-radius: 25px;
  background-color: #a2d5c6;
  color: #fff;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
}

.icon {
  width: 24px;
  height: 24px;
  margin-right: 10px;
}

.wechat-login {
  background-image: url('/images/wechat-icon.png');
  background-repeat: no-repeat;
  background-position: 10px center;
  padding-left: 40px;
}

.phone-login {
  background-image: url('/images/phone-icon.png');
  background-repeat: no-repeat;
  background-position: 10px center;
  padding-left: 40px;
}
